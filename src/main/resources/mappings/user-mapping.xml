<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDAO">
	<resultMap id="getUser" type="user" >
		<result property="email" column="MEMBER_EMAIL" />
		<result property="password" column="MEMBER_PASSWORD" />
	</resultMap>
	
	<select id="getUser" resultMap="getUser"
		parameterType="user">
		SELECT * FROM MEMBERINFO WHERE MEMBER_EMAIL=#{email} and MEMBER_PASSWORD=#{password}
	</select>
	
	<select id="getSocialUser" resultType="user"
		parameterType="user">
		SELECT * FROM wonbaetest WHERE email=#{email}
	</select>
	
	<select id="getSaltById" resultType="String"
		parameterType="String">
		SELECT SALT FROM MEMBERINFO WHERE MEMBER_EMAIL=#{email}
	</select>
	
</mapper>
