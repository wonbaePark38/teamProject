<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  
<tiles-definitions>
     <definition name="layout" template="/WEB-INF/tiles/template.jsp">
		<put-attribute name="header" value="/WEB-INF/layout/privateConfigHeader.jsp"/>
		
	</definition>
	
	<definition name="*.page" extends="layout">
        <put-attribute name="body" value="/{1}.jsp" />
    </definition>
 
     <definition name="*/*.page" extends="layout">
         <put-attribute name="body" value="/{1}/{2}.jsp" />
     </definition>
    
    <definition name="*/*/*.page" extends="layout">
        <put-attribute name="body" value="/{1}/{2}/{3}.jsp" />
    </definition>
     
    
     <definition name="baseEmpty" template="/WEB-INF/tiles/templateEmpty.jsp">
    </definition>
    
    
    <definition name="*.jsp" extends="baseEmpty">
        <put-attribute name="body" value="/{1}.jsp" />
    </definition>
    <definition name="*.do" extends="baseEmpty">
        <put-attribute name="body" value="/{1}.do" />
    </definition>
    <definition name="*/*.jsp" extends="baseEmpty">
        <put-attribute name="body" value="/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>